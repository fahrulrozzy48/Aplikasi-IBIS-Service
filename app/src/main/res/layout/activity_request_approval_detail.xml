<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ManagerUI.RequestApprovalDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ibis_logo_2012"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dari  : "
                android:fontFamily="@font/abeezee"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/detail_email_admin_approval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ibis@ibis.co.id"
                android:fontFamily="@font/abeezee"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                />




        </LinearLayout>

        <TextView
            android:id="@+id/detail_time_detail_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="17.56"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/abeezee"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/detail_subjek_detail_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subjek"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/abeezee"

            />

        <TextView
            android:id="@+id/detail_desc_detail_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="BLABLABLABLA"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/abeezee"

            />

        <TextView
            android:id="@+id/detail_answer_approval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/colorAccent"
            />

<!--        <ImageView-->
<!--            android:id="@+id/detail_image_detail_approval"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="300dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:layout_margin="10dp"-->
<!--            />-->


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <TextView
                android:id="@+id/teks_terima_atau_tolak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diterima atau ditolak? "
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/abeezee"
                android:textColor="@color/colorPrimaryDark"
                />

            <Spinner
                android:id="@+id/spinner_tindakan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abeezee"
            android:text="*Disclaimer : Jika sudah melakukan balasan, tidak bisa melakukan balasan lagi."
            android:textStyle="italic"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/btn_send_answer_detail_approval"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round"
            android:text="Send"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/abeezee"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="20dp"

            />


    </LinearLayout>
    </ScrollView>

</RelativeLayout>