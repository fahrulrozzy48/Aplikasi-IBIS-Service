<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserUI.AddPostServicesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_toolbar"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/abeezee"
            />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_service"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <EditText
            android:id="@+id/no_room_service"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="No Room"
            android:inputType="number"
            android:fontFamily="@font/abeezee"
            android:textColor="#555252"
            android:textSize="17dp"
            />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                >


                <TextView
                    android:id="@+id/date_pilihTanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:hint="Pilih Tanggal"
                    android:textSize="17sp"
                    android:fontFamily="@font/abeezee"
                    />

                <Button
                    android:id="@+id/btn_pilihTanggal"
                    android:layout_marginLeft="5dp"
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_round"
                    android:backgroundTint="@color/colorAccent"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/abeezee"
                    />


            </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8A8A8A"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

<!--        Spinner -->

        <LinearLayout
            android:id="@+id/layoutSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="5dp"
            >




            <Spinner
                android:id="@+id/spinner_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8A8A8A"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />


        <EditText
            android:id="@+id/title_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:fontFamily="@font/abeezee"
            android:textColor="#555252"
            android:textSize="17dp"
            />



        <EditText
            android:id="@+id/description_service"
            android:fontFamily="@font/abeezee"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="start"
            android:inputType="textCapSentences|textMultiLine"
            android:hint="Write a description of your services"
            android:background="@drawable/bg_round3"
            android:backgroundTint="#7C817E7E"
            android:textColor="#555252"
            />



        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_Panorama"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/image_service"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rsz_upload"
            android:layout_marginBottom="10dp"
            />
        </androidx.cardview.widget.CardView>



        <Button
            android:id="@+id/btn_send_service"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_round"
            android:text="Send"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/abeezee"
            android:textSize="15sp"
            android:textStyle="bold"

            />



    </LinearLayout>
    </ScrollView>

</RelativeLayout>