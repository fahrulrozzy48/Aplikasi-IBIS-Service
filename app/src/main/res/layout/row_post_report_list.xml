<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8F8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/row_emailAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="ibis@ibis.co.id"
            android:textSize="17sp"
            android:fontFamily="@font/abeezee"
            android:textColor="@color/colorAccent"
            />

        <TextView
            android:id="@+id/row_timeAdmin"
            android:layout_width="80dp"
            android:textAlignment="textEnd"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/abeezee"
            android:text="07/22/2020 16:40"
            android:textColor="@color/colorAccent"
            android:textSize="13sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/row_report_rangetanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Laporan tanggal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"
            />

        <TextView
            android:id="@+id/row_report_rangeAwaltanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="01/07/2020"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="-"
            />

        <TextView
            android:id="@+id/row_report_rangeAkhirTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="30/07/2020"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:fontFamily="@font/abeezee"
            />

    </LinearLayout>

    <View
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#D5D4D4"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penanggung Jawab : "
            android:textSize="13sp"
            android:fontFamily="@font/abeezee"
            />
        <TextView
            android:id="@+id/row_report_penanggung_jawab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ARUL "
            android:textSize="13sp"
            android:fontFamily="@font/abeezee"
            />
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#D5D4D4"
        />


</LinearLayout>