<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminUI.AddPostFeedsAdminActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_addpostfeeds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_toolbar"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Post"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/abeezee"
            />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_addpostfeeds"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_Panorama"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/image_addPostFeeds"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rsz_upload"
                    android:layout_marginBottom="10dp"
                    />
            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/description_addPostFeeds"
                android:fontFamily="@font/abeezee"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="start"
                android:inputType="textCapSentences|textMultiLine"
                android:hint="Write a description"
                android:background="@drawable/bg_round3"
                android:backgroundTint="#7CE4E3E3"
                android:textColor="#555252"
                />


            <Button
                android:id="@+id/btn_send_addPostFeeds"
                android:layout_marginTop="10dp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_round"
                android:text="Send"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/abeezee"
                android:textSize="15sp"
                android:textStyle="bold"

                />
        </LinearLayout>



    </ScrollView>

</RelativeLayout>